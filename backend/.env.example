# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://[username]:[password]@[cluster].mongodb.net/[database]

# Authentication
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=1d

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Google Cloud Storage
# Option 1: Use service account key file (recommended for local development)
GOOGLE_CLOUD_KEY_FILE=/path/to/your-service-account-keyfile.json

# Option 2: Use credentials JSON (recommended for production)
# GOOGLE_CLOUD_CREDENTIALS={"type":"service_account","project_id":"..."}

# Bucket Configuration
# Development: portfolio-media-dev
# Production: portfolio-media-prod
GOOGLE_CLOUD_BUCKET=portfolio-media-dev

# Local Storage Fallback (optional)
# Set to true to use local file storage instead of GCS (useful for development)
# USE_LOCAL_STORAGE=true

# Email Configuration
EMAIL_USER=your-email@example.com
EMAIL_APP_PASSWORD=your-app-password
EMAIL_RECIPIENT=recipient@example.com

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com